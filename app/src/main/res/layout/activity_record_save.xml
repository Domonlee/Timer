<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6de2a4"
    android:orientation="vertical"
    tools:context="domon.cn.timer.ui.activity.RecordSaveActivity">

    <ImageView
        android:id="@+id/save_close_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:src="@mipmap/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/save_tags_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="请选择一个分类"
            android:textSize="48sp" />

        <View
            android:layout_width="160dp"
            android:background="#fff"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/save_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="00:00"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/save_submit_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/submit" />
    </LinearLayout>


</LinearLayout>
